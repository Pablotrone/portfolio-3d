{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "declaration": true,
    "outDir": "./dist-node"
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "eslint.config.js"
  ]
}
